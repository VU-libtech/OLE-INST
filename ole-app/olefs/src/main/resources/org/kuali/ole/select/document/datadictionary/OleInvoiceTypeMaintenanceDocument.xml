  <bean id="OleInvoiceTypeMaintenanceDocument" parent="OleInvoiceTypeMaintenanceDocument-parentBean"/>

  <bean id="OleInvoiceTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.ole.select.businessobject.OleInvoiceType"/>
    <property name="maintainableClass" value="org.kuali.ole.sys.document.FinancialSystemMaintainable"/>
    <property name="maintainableSections">
      <list>
        <ref bean="OleInvoiceTypeMaintenanceDocument-EditInvoiceType"/>
      </list>
    </property>
    <property name="lockingKeys">
      <list>
        <value>invoiceTypeId</value>
      </list>
    </property>
     <property name="documentTypeName" value="OLE_INVCTYP"/>
    <property name="documentAuthorizerClass" value="org.kuali.ole.sys.document.authorization.FinancialSystemMaintenanceDocumentAuthorizerBase"/>
    <property name="workflowAttributes">
    	<ref bean="OleInvoiceTypeMaintenanceDocument-workflowAttributes"/>
    </property>
  </bean>

<!-- Maintenance Section Definitions -->

  <bean id="OleInvoiceTypeMaintenanceDocument-EditInvoiceType" parent="OleInvoiceTypeMaintenanceDocument-EditInvoiceType-parentBean"/>

  <bean id="OleInvoiceTypeMaintenanceDocument-EditInvoiceType-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="id" value="Edit Invoice Type"/>
    <property name="title" value="Edit Invoice Type"/>
    <property name="maintainableItems">
      <list>
        <bean parent="MaintainableFieldDefinition" p:name="invoiceType" p:required="true"/>
        <bean parent="MaintainableFieldDefinition" p:name="invoiceTypeDescription"/>
        <bean parent="MaintainableFieldDefinition" p:name="active" p:defaultValue="true"/>
      </list>
    </property>
  </bean>
  
  <!-- workflow attributes -->
  <bean id="OleInvoiceTypeMaintenanceDocument-workflowAttributes" parent="OleInvoiceTypeMaintenanceDocument-workflowAttributes-parentBean"/>
  
  <bean id="OleInvoiceTypeMaintenanceDocument-workflowAttributes-parentBean" class="org.kuali.rice.krad.datadictionary.WorkflowAttributes" abstract="true"/>
</beans>
