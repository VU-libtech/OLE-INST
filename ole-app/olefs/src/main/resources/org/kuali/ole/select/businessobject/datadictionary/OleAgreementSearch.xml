    <bean id="OleAgreementSearch" parent="OleAgreementSearch-parentBean"/>

    <bean id="OleAgreementSearch-parentBean" abstract="true" parent="BusinessObjectEntry">
        <property name="businessObjectClass" value="org.kuali.ole.select.bo.OleAgreementSearch"/>
        <property name="titleAttribute" value="oleEventLogId"/>
        <property name="objectLabel" value="Event Log"/>

        <property name="attributes">
            <list>
                <ref bean="OleAgreementSearch-agreementTitle"/>
                <ref bean="OleAgreementSearch-contractNumber"/>
                <ref bean="OleAgreementSearch-licensee"/>
                <ref bean="OleAgreementSearch-licensor"/>
            </list>
        </property>
    </bean>

    <!-- Attribute Definitions -->
    <bean id="OleAgreementSearch-agreementTitle" parent="OleAgreementSearch-agreementTitle-parentBean"/>

    <bean id="OleAgreementSearch-agreementTitle-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Agreement Title"/>
        <property name="maxLength" value="40"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="20"/>
        </property>
        <property name="name" value="agreementTitle"/>
        <property name="label" value="Agreement Title"/>
        <property name="description" value="Agreement Title"/>
    </bean>


    <bean id="OleAgreementSearch-contractNumber" parent="OleAgreementSearch-contractNumber-parentBean"/>

    <bean id="OleAgreementSearch-contractNumber-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Contract Number"/>
        <property name="maxLength" value="40"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern"/>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="20"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="20"/>
        </property>
        <property name="name" value="contractNumber"/>
        <property name="label" value="Contract Number"/>
        <property name="description" value="Contract Number"/>
    </bean>


    <bean id="OleAgreementSearch-licensee" parent="OleAgreementSearch-licensee-parentBean"/>

    <bean id="OleAgreementSearch-licensee-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="licensee"/>
        <property name="maxLength" value="20"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern"/>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="20"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="20"/>
        </property>
        <property name="name" value="licensee"/>
        <property name="label" value="Licensee"/>
        <property name="description" value="Licensee"/>
    </bean>


    <bean id="OleAgreementSearch-licensor" parent="OleAgreementSearch-licensor-parentBean"/>

    <bean id="OleAgreementSearch-licensor-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="shortLabel" value="Licensor"/>
        <property name="maxLength" value="20"/>
        <property name="validationPattern">
            <bean parent="AnyCharacterValidationPattern"/>
        </property>
        <property name="control">
            <bean parent="TextControlDefinition" p:size="20"/>
        </property>
        <property name="name" value="licensor"/>
        <property name="label" value="Licensor"/>
        <property name="description" value="Licensor"/>
    </bean>

<!--    <bean id="Uif-LookupView-RemoveAction" parent="Uif-LookupView-RemoveAction-parentBean"/>
    <bean id="Uif-LookupView-RemoveAction-parentBean" abstract="true" class="org.kuali.ole.service.OleLookupView" parent="Uif-OLELookupView"/>-->

    <bean id="OleAgreementSearch-LookupView" parent="Uif-OLELookupView">
        <property name="headerText" value="Agreement Search"/>
        <property name="help">
            <bean parent="Uif-Help">
                <property name="externalHelpUrl"
                          value="@{#ConfigProperties['externalizable.help.url']}/reference/webhelp/AG/content/ch08s01.html"/>
                <!--<property name="tooltipHelpContent" value="[Help] help"/>-->
            </bean>
        </property>
        <property name="dataObjectClassName" value="org.kuali.ole.select.bo.OleAgreementSearch"/>
        <property name="viewHelperServiceClass" value="org.kuali.ole.select.lookup.OleAgreementSearchLookupableImpl"/>
        <property name="criteriaFields">
            <list>
                <bean id="agreementTitle" parent="Uif-LookupCriteriaInputField" p:propertyName="agreementTitle"/>
                <bean id="contractNumber" parent="Uif-LookupCriteriaInputField" p:propertyName="contractNumber"/>
                <bean id="licensee" parent="Uif-LookupCriteriaInputField" p:propertyName="licensee">
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder" p:dataObjectClassName="org.kuali.rice.kim.impl.identity.PersonImpl"
                              p:fieldConversions="principalName:licensee"/>
                    </property>
                </bean>
                <bean id="licensor" parent="Uif-LookupCriteriaInputField" p:propertyName="licensor">
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder" p:dataObjectClassName="org.kuali.rice.kim.impl.identity.PersonImpl"
                              p:fieldConversions="principalName:licensor"/>
                    </property>
                </bean>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean id="searchResult_agreementTitle" parent="Uif-DataField" p:propertyName="agreementTitle"/>
                <bean id="searchResult_contractNumber" parent="Uif-DataField" p:propertyName="contractNumber"/>
                <!--<bean parent="Uif-DataField" p:propertyName="licensee"/>
                <bean parent="Uif-DataField" p:propertyName="licensor"/>-->
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>/ole/license/scripts/agreementSearch.js</value>
            </list>
        </property>
        <!--<property name="page">
            <bean parent="OleLicenseRequestBo-LookupPage"/>
        </property>-->
    </bean>


</beans>
