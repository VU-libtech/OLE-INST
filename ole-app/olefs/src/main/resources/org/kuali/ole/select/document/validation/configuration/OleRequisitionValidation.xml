<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Add Item Event -->
    <bean id="OleRequisition-addPurchasingAccountsPayableItemValidation" parent="Requisition-addPurchasingAccountsPayableItemValidation" scope="prototype" >
  
		<property name="validations">
  			<list>
  				<bean parent="OlePurchasing-addItemValidation" scope="prototype">
					<property name="parameterProperties">
						<list>
							<bean parent="validationFieldConversion">
								<property name="sourceEventProperty" value="item" />
								<property name="targetValidationProperty" value="itemForValidation" />
							</bean>
						</list>
					</property>
				</bean>
				<bean parent="Purchasing-addItemBibInfoValidation" scope="prototype">
					<property name="parameterProperties">
						<list>
							<bean parent="validationFieldConversion">
								<property name="sourceEventProperty" value="item" />
								<property name="targetValidationProperty" value="itemForValidation" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>	
		
	</bean>
</beans>
