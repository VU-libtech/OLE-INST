<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	 <bean id="InvoiceAccount" parent="OleInvoiceAccount-parentBean"/>
	
	 <bean id="OleInvoiceAccount-parentBean" abstract="true" parent="InvoiceAccount-parentBean">
		<property name="businessObjectClass" value="org.kuali.ole.module.purap.businessobject.InvoiceAccount"/>
		
	 </bean>
	<bean id="InvoiceAccount-amount-parentBean" abstract="true"
	parent="GenericAttributes-genericAmount">
		<property name="name" value="amount" />
		<property name="required" value="false" />
		<property name="label" value="Dollar $" />
		<property name="shortLabel" value="Dollar $" />
		<property name="formatterClass" value="org.kuali.rice.core.web.format.CurrencyFormatter" />
	</bean>
	</beans>
