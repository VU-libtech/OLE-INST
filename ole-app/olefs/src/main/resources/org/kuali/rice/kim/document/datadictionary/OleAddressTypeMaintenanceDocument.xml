<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="KimAddressTypeMaintenanceDocument" parent="KimAddressTypeMaintenanceDocument-parentBean"/>

    <bean id="KimAddressTypeMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
        <property name="dataObjectClass" value="org.kuali.rice.kim.impl.identity.address.EntityAddressTypeBo"/>
        <property name="maintainableSections">
            <list>
                <ref bean="KimAddressTypeMaintenanceDocument-EditAddressType"/>
            </list>
        </property>
        <property name="lockingKeys">
            <list>
                <value>code</value>
            </list>
        </property>
        <property name="documentTypeName" value="OLE_ADDR_TYP_MD"/>
        <property name="documentAuthorizerClass"
                  value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
        <property name="businessRulesClass" value="org.kuali.rice.kim.rule.OleAddressTypeRule"/>
    </bean>

    <!-- Maintenance Section Definitions -->


    <bean id="KimAddressTypeMaintenanceDocument-EditAddressType"
          parent="KimAddressTypeMaintenanceDocument-EditAddressType-parentBean"/>

    <bean id="KimAddressTypeMaintenanceDocument-EditAddressType-parentBean" abstract="true"
          parent="MaintainableSectionDefinition">
        <property name="maintainableItems">
            <list>
                <bean parent="MaintainableFieldDefinition" p:required="true" p:name="code"/>
                <bean parent="MaintainableFieldDefinition" p:required="true" p:name="name"/>
                <bean parent="MaintainableFieldDefinition" p:required="true" p:name="sortCode"/>
                <bean parent="MaintainableFieldDefinition" p:defaultValue="true" p:name="active"/>
            </list>
        </property>
        <property name="id" value="Edit Address Type"/>
        <property name="title" value="Edit Address Type"/>
    </bean>
</beans>
